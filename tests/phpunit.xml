<phpunit convertWarningsToExceptions="false" bootstrap="../../../vendor/autoload.php">
    <testsuites>
        <testsuite name="supervisor">
            <directory>components/supervisor</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">components/supervisor</directory>
            <exclude>
                <!--<directory suffix=".php">../frontend/modules/supervisor/components/supervisor/widget</directory>-->
                <!--<file>/var/www/html/seo/frontend/modules/supervisor/components/supervisor/ConnectionInterface.php</file>-->
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="logs/report" lowUpperBound="35"
             highLowerBound="70"/>
        <log type="coverage-clover" target="logs/coverage.xml"/>
        <log type="coverage-php" target="logs/coverage.serialized"/>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
        <log type="json" target="logs/logfile.json"/>
        <log type="tap" target="logs/logfile.tap"/>
        <log type="junit" target="logs/logfile.xml" logIncompleteSkipped="false"/>
        <log type="testdox-html" target="logs/testdox.html"/>
        <log type="testdox-text" target="logs/testdox.txt"/>
    </logging>

</phpunit>